{
  "name": "akiflow-cli",
  "version": "0.1.1",
  "description": "Akiflow CLI - Task management from the command line",
  "author": "YeonGyu Kim <code.yeongyu@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/code-yeongyu/akiflow-cli.git"
  },
  "homepage": "https://github.com/code-yeongyu/akiflow-cli",
  "bugs": {
    "url": "https://github.com/code-yeongyu/akiflow-cli/issues"
  },
  "keywords": [
    "akiflow",
    "cli",
    "task",
    "productivity",
    "todo",
    "bun"
  ],
  "module": "src/index.ts",
  "type": "module",
  "bin": {
    "af": "./src/index.ts"
  },
  "files": [
    "src",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@types/bun": "^1.3.8"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "chrono-node": "^2.9.0",
    "citty": "^0.2.0",
    "rrule": "^2.8.1"
  },
  "scripts": {
    "dev": "bun run --hot src/index.ts",
    "start": "bun run src/index.ts",
    "build": "bun build src/index.ts --compile --outfile af",
    "build:all": "bun run build:darwin-arm64 && bun run build:darwin-x64 && bun run build:linux-x64",
    "build:darwin-arm64": "bun build src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/af-darwin-arm64",
    "build:darwin-x64": "bun build src/index.ts --compile --target=bun-darwin-x64 --outfile dist/af-darwin-x64",
    "build:linux-x64": "bun build src/index.ts --compile --target=bun-linux-x64 --outfile dist/af-linux-x64",
    "test": "bun test",
    "prepublishOnly": "echo 'This package requires Bun runtime. Install with: bun install -g akiflow-cli'"
  }
}
